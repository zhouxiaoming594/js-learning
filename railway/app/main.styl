/* main.css */
*, *:before, *:after
	box-sizing: border-box

html
	box-sizing: border-box
	-ms-text-size-adjust: 100%
	-webkit-text-size-adjust: 100%
	height: 100%
	font-size: 62.5%
body
	height: 100%
body,h1,h2,h3,h4,h5,h6,p
	margin: 0
	padding 0
header
	background: #777
	padding: 0 20px
	.logo
		display: inline-block
		vertical-align: top
		margin-top: 10px
		width: 32px
		height: 32px
		border: 1px solid #f00
		border-radius: 50%
	.title
		display: inline-block
		vertical-align: top
		height: 50px
		line-height: 50px
		font-size: 32px
.wrap
	display:flex
	height: calc(100% - 50px)
	flex-wrap: wrap
	padding:5px
	.content
		width: calc(50% - 10px)
		height: calc(50% - 12px)
		border: 1px solid #ff0
		margin: 5px
		&.detail
			.top-panel
				display: flex
				flex-wrap: nowrap
				padding: 5px
				height: 60%
				.pic
					width:100px
					height:100px
					border: 1px solid #000
					font-size: 1rem
				.form
					flex: 2
					margin-left: 20px
					font-size: 1rem
				.chart
					flex: 1
					height: 100%
			.line
				border-top: 1px solid #ccc
			.bottom-panel
				padding: 20px
				display: flex
				.abstruct
					padding: 5px
					flex: 1
					.pic
						float: left
						width: 50px
						height: 50px
						border: 1px solid #f00
						border-radius: 50%
					.summary
						float: left

		&.time-distribution
			font-size: 1rem
			.chart
				width: 100%
				height: 100%
		&.count-distribution
			font-size: 1rem
			.chart
				width: 100%
				height: 100%
