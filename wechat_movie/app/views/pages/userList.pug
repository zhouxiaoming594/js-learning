extends ../layout

block content
  .container
    .row
      table.table.table-hover.table-bordered
        thead
          tr
            th 用户名称
            th 用户密码
            th 录入时间
            th 修改
            th 删除
        tbody
          each item in users
            tr(class="item-id-" + item._id)
              td #{item.name}
              td #{item.password}
              td #{moment(item.meta.updateAt).format('MM/DD/YYYY')}
              td: a(target="_blank", href="../user/update/" + item._id ) 修改
              td
                button.btn.btn-danger.del(type="button", data-id=item._id) 删除
